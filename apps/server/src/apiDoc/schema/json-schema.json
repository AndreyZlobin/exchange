{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "Log": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "action": {
          "type": [
            "string",
            "null"
          ]
        },
        "source": {
          "type": [
            "string",
            "null"
          ]
        },
        "data": {
          "type": [
            "number",
            "string",
            "boolean",
            "object",
            "array",
            "null"
          ]
        },
        "created": {
          "type": [
            "string",
            "null"
          ],
          "format": "date-time"
        }
      }
    },
    "Claim": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "uuid": {
          "type": "string"
        },
        "order_id": {
          "type": [
            "integer",
            "null"
          ]
        },
        "order_status": {
          "type": [
            "string",
            "null"
          ]
        },
        "deal_id": {
          "type": [
            "integer",
            "null"
          ]
        },
        "fiat_amount": {
          "type": [
            "number",
            "null"
          ]
        },
        "fiat_amount_order": {
          "type": [
            "number",
            "null"
          ]
        },
        "status": {
          "type": [
            "string",
            "null"
          ]
        },
        "error": {
          "type": [
            "string",
            "null"
          ]
        },
        "provider": {
          "type": [
            "string",
            "null"
          ]
        },
        "client_name": {
          "type": [
            "string",
            "null"
          ]
        },
        "handler": {
          "type": [
            "string",
            "null"
          ]
        },
        "payment_system": {
          "type": [
            "string",
            "null"
          ]
        },
        "created": {
          "type": [
            "string",
            "null"
          ],
          "format": "date-time"
        },
        "images": {
          "type": [
            "number",
            "string",
            "boolean",
            "object",
            "array",
            "null"
          ]
        },
        "savedImages": {
          "type": [
            "number",
            "string",
            "boolean",
            "object",
            "array",
            "null"
          ]
        },
        "urls": {
          "type": [
            "number",
            "string",
            "boolean",
            "object",
            "array",
            "null"
          ]
        }
      }
    },
    "PaymentSystem": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "name": {
          "type": "string",
          "enum": [
            "ccard",
            "sim",
            "qiwi",
            "yandex"
          ]
        },
        "type": {
          "type": "string",
          "enum": [
            "ccard",
            "sim",
            "qiwi",
            "yandex"
          ],
          "description": "Все допустимые системы оплаты"
        },
        "min": {
          "type": "integer",
          "description": "Минимальные и максимальные суммы заявок по платежным системам"
        },
        "max": {
          "type": "integer",
          "description": "Минимальные и максимальные суммы заявок по платежным системам"
        },
        "brokerCommission": {
          "type": "integer",
          "description": "Комиссии посредника (если таковой имеется)"
        },
        "systemCommission": {
          "type": "integer",
          "description": "Комиссии по платежным системам"
        },
        "isAllow": {
          "type": "boolean",
          "default": false,
          "description": "Доступ к созданию заявок по платежным системам"
        },
        "orders": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Order"
          }
        }
      }
    },
    "Order": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "status": {
          "type": "string",
          "default": "new",
          "enum": [
            "new",
            "dealAdded",
            "dealCanceled",
            "dealCanceledMarkedPaid",
            "requisiteAdded",
            "markedPaid",
            "finished",
            "canceled",
            "claim",
            "renew",
            "waitFinishTx",
            "finishError"
          ]
        },
        "user": {
          "$ref": "#/definitions/User"
        },
        "paymentSystem": {
          "$ref": "#/definitions/PaymentSystem"
        },
        "statusHistory": {
          "type": "array",
          "enum": [
            "new",
            "dealAdded",
            "dealCanceled",
            "dealCanceledMarkedPaid",
            "requisiteAdded",
            "markedPaid",
            "finished",
            "canceled",
            "claim",
            "renew",
            "waitFinishTx",
            "finishError"
          ]
        },
        "created": {
          "type": [
            "string",
            "null"
          ],
          "format": "date-time"
        },
        "deleted": {
          "type": [
            "boolean",
            "null"
          ],
          "default": false
        }
      }
    },
    "Wallet": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "balance": {
          "type": "number",
          "default": 0,
          "description": "Текущий баланс пользователя"
        },
        "balanceDep": {
          "type": "number",
          "default": 0,
          "description": "Активный баланс пользователя"
        },
        "address": {
          "type": "string",
          "description": "Адрес кошелька для системы автосписания депозитов"
        },
        "walletDepositCheckAmount": {
          "type": "integer",
          "description": "Сумма проверки для системы автосписания депозитов"
        },
        "user": {
          "$ref": "#/definitions/User"
        },
        "deleted": {
          "type": [
            "boolean",
            "null"
          ],
          "default": false
        }
      }
    },
    "PaymentSetting": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "systems": {
          "$ref": "#/definitions/Systems"
        },
        "user": {
          "$ref": "#/definitions/User"
        },
        "deleted": {
          "type": [
            "boolean",
            "null"
          ],
          "default": false
        }
      }
    },
    "Currency": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "name": {
          "type": "string",
          "enum": [
            "Tether",
            "BTC"
          ]
        },
        "title": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "enum": [
            "Cryptocurrency",
            "Fiat"
          ]
        }
      }
    },
    "User": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "password": {
          "type": "string"
        },
        "role": {
          "type": "array",
          "enum": [
            "superadmin",
            "admin",
            "broker",
            "provider",
            "seller",
            "support"
          ]
        },
        "active": {
          "type": "boolean",
          "default": true,
          "description": "Активен ли аккаунт, если нет, то нет доступ ко всему функционалу запрещен"
        },
        "orders": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Order"
          }
        },
        "wallet": {
          "anyOf": [
            {
              "$ref": "#/definitions/Wallet"
            },
            {
              "type": "null"
            }
          ]
        },
        "paymentSetting": {
          "anyOf": [
            {
              "$ref": "#/definitions/PaymentSetting"
            },
            {
              "type": "null"
            }
          ]
        },
        "deleted": {
          "type": [
            "boolean",
            "null"
          ],
          "default": false
        }
      }
    },
    "System": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "ccard",
            "sim",
            "qiwi",
            "yandex"
          ]
        },
        "min": {
          "type": "integer"
        },
        "max": {
          "type": "integer"
        },
        "brokerCommission": {
          "type": "integer"
        },
        "systemCommission": {
          "type": "integer"
        },
        "isAllow": {
          "type": "boolean",
          "default": false
        }
      }
    },
    "Systems": {
      "type": "object",
      "properties": {
        "ccard": {
          "$ref": "#/definitions/System"
        },
        "sim": {
          "$ref": "#/definitions/System"
        },
        "qiwi": {
          "$ref": "#/definitions/System"
        },
        "yandex": {
          "$ref": "#/definitions/System"
        }
      }
    }
  },
  "type": "object",
  "properties": {
    "log": {
      "$ref": "#/definitions/Log"
    },
    "claim": {
      "$ref": "#/definitions/Claim"
    },
    "paymentSystem": {
      "$ref": "#/definitions/PaymentSystem"
    },
    "order": {
      "$ref": "#/definitions/Order"
    },
    "wallet": {
      "$ref": "#/definitions/Wallet"
    },
    "paymentSetting": {
      "$ref": "#/definitions/PaymentSetting"
    },
    "currency": {
      "$ref": "#/definitions/Currency"
    },
    "user": {
      "$ref": "#/definitions/User"
    }
  }
}