{
  "name": "@exchange/server",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint:origin": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "clean": "rimraf ./build",
    "check-types": "tsc",
    "eslint": "eslint --cache --ext .ts .",
    "lint": "npm run eslint && npm run check-types",
    "lint:fix": "eslint --cache --ext .ts . --fix",
    "prettier:fix": "prettier",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "prisma:init": "npx prisma init --datasource-provider mongodb",
    "prisma:gen": "npx prisma generate",
    "prisma:drop": "npx prisma prisma db drop",
    "prisma:studio": " prisma studio",
    "prisma:migrate": "npx prisma migrate dev --name init",
    "plop": "npx plop"
  },
  "dependencies": {
    "@nestjs/common": "^9.0.0",
    "@nestjs/core": "^9.0.0",
    "@nestjs/mongoose": "^9.2.1",
    "@nestjs/platform-express": "^9.0.0",
    "@nestjs/schedule": "^2.2.0",
    "@nestjs/swagger": "^6.2.1",
    "@nestjs/throttler": "^4.0.0",
    "@prisma/client": "^4.10.1",
    "axios": "^1.3.4",
    "bcrypt": "^5.1.0",
    "cron": "^2.2.0",
    "dotenv": "^16.0.3",
    "helmet": "^6.0.1",
    "inversify": "^6.0.1",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^7.0.0",
    "redis": "^4.6.5",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.2.0",
    "telegraf": "^4.11.2",
    "tslog": "^4.7.5",
    "yup": "^1.0.2"
  },
  "devDependencies": {
    "@nestjs/cli": "^9.0.0",
    "@nestjs/schematics": "^9.0.0",
    "@nestjs/testing": "^9.0.0",
    "@types/bcrypt": "^5.0.0",
    "@types/cron": "^2.0.0",
    "@types/express": "^4.17.13",
    "@types/jest": "29.2.4",
    "@types/mongoose": "^5.11.97",
    "@types/node": "18.11.18",
    "@types/node-cron": "^3.0.7",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "eslint": "8.26.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-simple-import-sort": "^8.0.0",
    "jest": "29.3.1",
    "plop": "^3.1.2",
    "prettier": "^2.3.2",
    "prisma-dbml-generator": "^0.10.0",
    "prisma-json-schema-generator": "^3.1.2",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "29.0.3",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "4.1.1",
    "typescript": "^4.7.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "volta": {
    "node": "18.13.0",
    "yarn": "1.19.2"
  }
}
