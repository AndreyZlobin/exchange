{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "strictPropertyInitialization": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "removeComments": false,
    "isolatedModules": false,
    "noEmit": true,
    "alwaysStrict": true,
    "noUnusedLocals": false,
    "importHelpers": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@components/*": [
        "./src/components/*"
      ],
      "@utils/*": [
        "./src/utils/*"
      ],
      "@constants/*": [
        "./src/constants/*"
      ],
      "@hooks/*": [
        "./src/hooks/*"
      ],
      "@query/*": [
        "./src/hooks/query/*"
      ],
      "@services/*": [
        "./src/services/*"
      ],
      "@assets/*": [
        "./src/assets/*"
      ]
    },
    "typeRoots": [
      "node",
      "node_modules/@types",
      "./typings"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "vite/**/*.ts",
    "./**/*.d.ts",
    "vite.config.ts",
    "vite.config.ssr.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "tmp"
  ]
}
