  "workspaces": [
    "./apps/*"
  ],
  "scripts": {
    "server:dev": "npm run dev --prefix apps/server",
    "prisma:init": "npm run prisma:init --prefix apps/server",
    "prisma:drop": "npm run prisma:drop --prefix apps/server",
    "prisma:migrate": "npm run prisma:migrate --prefix apps/server",
